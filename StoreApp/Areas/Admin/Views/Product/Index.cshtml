@model IEnumerable<Product>

<div class="text-center">
    <h2>Products</h2>
    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create"><i class="fa fa-plus"></i> Create</a>
    </div>
    <table class="table table-hover">
        <theader>
            <tr>
                <th>Id</th>
                <th>Image Url</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </theader>
        <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <th>@product.Id</th>
                <th>
                    <img src="@product.ImageUrl" alt="@product.ProductName" width="50px" class="border border-light rounded">
                </th>
                <th>@product.ProductName</th>
                <th>@product.Price</th>
                <th>
                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@product.Id"><i class="fa fa-pen"></i> Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.Id"><i class="fa-solid fa-trash"></i> Delete</a>
                    <a class="btn btn-info" target="_blank" asp-area="" asp-action="Get" asp-route-id="@product.Id"><i class="fa fa-search"></i> Web</a>
                </th>
            </tr>
        }
        </tbody>
    </table>
    
</div>