@model ProductDtoForUpdate  


<div class="text-center">
    <h2>Create</h2>
</div>
<form method="post" asp-action="Update" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input class="form-control" type="text" asp-for="ProductName">
    </div>
    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input class="form-control" type="text" asp-for="Price">
    </div>
    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories">
            @* @foreach (Category item in ViewBag.Categories) *@
            @* { *@
            @*     <option value="@item.Id">@item.CategoryName</option> *@
            @* } *@
        </select>
    </div>
    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input type="text" asp-for="Summary" class="form-control">
    </div>
    
    <div class="form-group my-3">
        <img class="rounded shadow" width="150px" src="@Model?.ImageUrl" alt="@Model.Summary">
    </div>
    <div class="form-group my-3">
        <label>Image</label>
        <input type="file" name="file" class="form-control">
    </div>
    <div class="btn-group my-3">
        <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Save</button>
        <a class="btn btn-outline-primary" asp-action="Index"><i class="fa fa-list"></i> Back</a>
    </div>
</form>