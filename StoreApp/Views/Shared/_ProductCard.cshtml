@model Product
<div class="col-md-4 my-4">
    <div class="card" style="width: 18rem">
        <div class="card-header">
            <p class="card-text">@Model.ProductName</p>
        </div>
        <img src="@Model?.ImageUrl" class="card-img-top"/>
        <div class="card-body">
            <div class="text-center text-danger">
                <p>@Model.Price.ToString("C")</p>
            </div>
            <div class="d-flex justify-content-center">
                <div class="btn-group">
                    <form method="post" asp-page="/cart">
                        <input type="hidden" asp-for="Id">
                        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()">
                        <button class="btn btn-outline-secondary" type="submit">
                            <i class="fa fa-cart-plus"></i>
                        </button>
                    </form>
                    
                    <a class="btn btn-outline-secondary mx-1 rounded-2" asp-controller="Product" asp-action="Get" asp-route-id="@Model.Id">
                        <i class="fa-solid fa-arrow-right"></i>
                    </a>
                    
                </div>
            </div>
        </div>
    </div>
</div>