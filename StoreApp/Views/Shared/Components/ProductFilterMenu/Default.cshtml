<div class="my-3">
    <h6 class="lead">
        <i class="fa fa-filter text-secondary"></i>
        Filters
    </h6>
</div>
<div class="my-3">
    <form method="post" asp-action="Index">
        <input type="hidden" name="CategoryId" value="@(Context.Request.Query["categoryId"])">
        <div class="form-group my-2">
            <input class="form-control" name="SearchTerm" placeholder="Search">
        </div>
        <div class="form-group my-2">
            <input class="form-control" type="text" name="MinPrice" placeholder="0">
            
        </div>
        <div class="form-group my-2">
            <input class="form-control" type="text" name="MaxPrice" placeholder="0">
            
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-sm btn-primary">
                Apply
            </button>
        </div>
    </form>
</div>
